# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,server-ip-address

# Database (if using PostgreSQL)
DATABASE_URL=postgresql://chatbot_user:your_secure_password@localhost:5432/classcare_chatbot

# Or use SQLite (not recommended for production)
# DATABASE_URL=sqlite:///db.sqlite3

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Milvus Configuration
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=classcare_documents

# Embeddings (use local embeddings - no API calls)
USE_LOCAL_EMBEDDINGS=True
USE_QUESTION_LOCAL_EMBEDDINGS=True

# Chatbot Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CONVERSATION_HISTORY=10

# Time Zone
TIME_ZONE=UTC

# CORS Configuration (optional)
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000
