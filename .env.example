# ClassCare Chatbot - Environment Configuration
# Copy the contents below to your .env file
# Make sure there are NO spaces around the = sign
# Make sure there are NO quotes around values

# OpenAI Configuration (used when USE_OLLAMA=False)
# Your OpenAI API Key - already set correctly
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo


# ===================================================================
# Django Configuration
# ===================================================================
SECRET_KEY=django-insecure-change-this-in-production-key-12345
DEBUG=False
ALLOWED_HOSTS=

# ===================================================================
# Database Configuration (PostgreSQL)
# ===================================================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# ===================================================================
# Embeddings Configuration
# ===================================================================
# Use local embeddings (sentence-transformers) - FREE, no API calls
USE_LOCAL_EMBEDDINGS=True
USE_QUESTION_LOCAL_EMBEDDINGS=True

# ===================================================================
# Chatbot Configuration
# ===================================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CONVERSATION_HISTORY=10 # Get History from the data base when we are call api to question

# ===================================================================
# CORS Configuration
# ===================================================================
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOWED_ORIGINS=
CORS_ALLOW_METHODS=DELETE,GET,OPTIONS,PATCH,POST,PUT
CORS_ALLOW_HEADERS=accept,accept-encoding,authorization,content-type,dnt,origin,user-agent,x-csrftoken,x-requested-with

# ===================================================================
# Language and Timezone
# ===================================================================
LANGUAGE_CODE=en-us
TIME_ZONE=UTC